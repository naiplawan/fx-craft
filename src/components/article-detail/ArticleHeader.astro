---
import Badge from '@/components/ui/Badge.astro';
import { Calendar } from 'lucide-react';

interface Props {
  title: string;
  subtitle: string;
  category: string;
  icon: string;
  difficulty: string;
  tags: string[];
  status: string;
}

const { title, subtitle, category, difficulty, tags, status } = Astro.props;

const difficultyColors: Record<string, string> = {
  beginner: 'bg-green-100 dark:bg-green-900/20 text-green-700 dark:text-green-400',
  intermediate: 'bg-yellow-100 dark:bg-yellow-900/20 text-yellow-700 dark:text-yellow-400',
  advanced: 'bg-red-100 dark:bg-red-900/20 text-red-700 dark:text-red-400',
};
---

<header class="mb-12">
  <div class="flex items-center gap-2 mb-4">
    <Badge category={category} />
    {status === 'stub' && (
      <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-yellow-100 dark:bg-yellow-900/20 text-yellow-700 dark:text-yellow-400 text-xs font-medium">
        <span class="w-1.5 h-1.5 rounded-full bg-yellow-500 animate-pulse" />
        Coming soon
      </span>
    )}
  </div>

  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4">
    {title}
  </h1>

  <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
    {subtitle}
  </p>

  <div class="flex items-center gap-4 flex-wrap">
    <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${difficultyColors[difficulty] || difficultyColors.beginner}`}>
      {difficulty.charAt(0).toUpperCase() + difficulty.slice(1)}
    </span>

    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>

  <hr class="mt-8 border-gray-200 dark:border-gray-800" />
</header>
