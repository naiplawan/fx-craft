---
import { getCollection } from 'astro:content';
import { ArrowRight } from 'lucide-react';

interface Props {
  slugs: string[];
}

const { slugs } = Astro.props;

const hasSlugs = slugs && slugs.length > 0;

let relatedArticles: Array<{ title: string; slug: string }> = [];

if (hasSlugs) {
  const allArticles = await getCollection('articles');
  relatedArticles = slugs
    .map((slug) => {
      const entry = allArticles.find((a) => a.slug === slug);
      return entry ? { ...entry.data, slug: entry.slug } : null;
    })
    .filter((a): a is NonNullable<typeof a> => a !== null);
}
---

{relatedArticles.length > 0 && (
  <section class="mt-12 p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
      Related Topics
    </h2>
    <ul class="space-y-3">
      {relatedArticles.map((article) => (
        <li>
          <a
            href={`/articles/${article.slug}`}
            class="flex items-center gap-2 text-[#088395] dark:text-[#7AB2B2] hover:underline hover:text-[#09637E] dark:hover:text-[#88c4c4] transition-colors"
          >
            <ArrowRight className="w-4 h-4" />
            {article.title}
          </a>
        </li>
      ))}
    </ul>
  </section>
)}
