---
import { ExternalLink } from 'lucide-react';

interface Resource {
  title: string;
  url: string;
}

interface Props {
  resources: Resource[];
}

const { resources } = Astro.props;
---

{resources && resources.length > 0 && (
  <section class="mt-12 p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2">
      <ExternalLink className="w-5 h-5" />
      Resources
    </h2>
    <ul class="space-y-2">
      {resources.map((resource) => (
        <li>
          <a
            href={resource.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[#088395] dark:text-[#7AB2B2] hover:underline hover:text-[#09637E] dark:hover:text-[#88c4c4] transition-colors"
          >
            {resource.title}
          </a>
        </li>
      ))}
    </ul>
  </section>
)}
