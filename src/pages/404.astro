---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="404 - Not Found | SalakCode">
  <div class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl md:text-8xl font-bold text-[#088395] dark:text-[#7AB2B2] mb-4">
        404
      </h1>
      <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
        Page Not Found
      </h2>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[#088395] dark:bg-[#7AB2B2] text-white dark:text-gray-950 font-semibold hover:bg-[#09637E] dark:hover:bg-[#88c4c4] transition-colors"
      >
        Go Home
      </a>
    </div>
  </div>
</Layout>
